											<g:inline template="activity_template_stream_inline_inputs.xml"/>
										</div>
									</j2:if>

								</j:if>
								<j:if test="${jvar_use_inline_stream == 'false'}">

							<j2:if test="$[jvar_show_comments_box == 'true']">
