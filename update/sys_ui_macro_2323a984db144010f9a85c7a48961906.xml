											  use-multiple-inputs="$[HTML,JS:gs.getUser().getPreference('glide.ui.activity_stream.multiple_inputs')]"
											  expand-entries="true"
											  page-size="${gs.getProperty('glide.ui.activity_stream.page_size', 0)}"
